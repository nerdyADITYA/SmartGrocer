<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:orientation="vertical"
    tools:context=".Activities.UpdateGrocery">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="UPDATE GROCERY"
        android:gravity="center_horizontal"
        android:textSize="45dp"/>

    <EditText
        android:id="@+id/etAddName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:hint="NAME"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/etAddUnit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:hint="UNIT"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/etAddPrice"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:hint="PRICE"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/etAddQuantity"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:hint="QUANTITY"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAddImage"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="CHANGE IMAGE"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/ImageAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAddGrocery"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="UPDATE"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btAddCancel"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>